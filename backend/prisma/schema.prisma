generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  role         String        @default("user") // Valeurs possibles: "user", "admin"
  firstName    String?
  lastName     String?
  permissions  Permission[]  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Permission {
  id          Int       @id @default(autoincrement())
  name        String    @unique // nom de la permission (ex: "create:products")
  description String?
  users       User[]    
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

